<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caterbao.lumos.locals.dal.mapper.BookBorrowFlowDataMapper">
    <select id="findOne" resultType="com.caterbao.lumos.locals.dal.pojo.BookBorrowFlowData" parameterType="com.caterbao.lumos.locals.dal.LumosSelective">
        select  ${fields} from BookBorrowFlowData where 1=1
        <if test="where.MerchId != null">and MerchId =#{where.MerchId}</if>
        <if test="where.FlowId != null">and FlowId =#{where.FlowId}</if>
        <if test="where.SkuRfId != null">and SkuRfId =#{where.SkuRfId}</if>
    </select>
    <select id="find" resultType="com.caterbao.lumos.locals.dal.pojo.BookBorrowFlowData" parameterType="com.caterbao.lumos.locals.dal.LumosSelective">
        select ${fields} from BookBorrowFlowData where 1=1
        <if test="where.MerchId != null">and MerchId =#{where.MerchId}</if>
        <if test="where.FlowId != null">and FlowId =#{where.FlowId}</if>
        <if test="where.SkuRfId != null">and SkuRfId =#{where.SkuRfId}</if>
        <if test="where.ClientUserId != null">and ClientUserId =#{where.ClientUserId}</if>
    </select>
    <insert id="insert" parameterType="com.caterbao.lumos.locals.dal.pojo.BookBorrowFlowData">
  insert into BookBorrowFlowData(id,merchId,storeId,shopId,deviceId,cabinetId,slotId,flowId,clientUserId,identityType,identityId,skuId,skuName,skuImgUrl,skuCumCode, skuRfId,borrowSeq,borrowTime,borrowWay,borrowStatus,creator,createTime)
  values(#{id},#{merchId},#{storeId},#{shopId},#{deviceId},#{cabinetId},#{slotId},#{flowId},#{clientUserId},#{identityType},#{identityId},#{skuId},#{skuName},#{skuImgUrl},#{skuCumCode},#{skuRfId},#{borrowSeq},#{borrowTime},#{borrowWay},#{borrowStatus},#{creator},#{createTime})
    </insert>
    <update id="update" parameterType="com.caterbao.lumos.locals.dal.pojo.BookBorrowFlowData">
        update BookBorrowFlowData
        <set>
            <if test="returnFlowId != null">returnFlowId=#{returnFlowId},</if>
            <if test="returnTime != null">returnTime=#{returnTime},</if>
            <if test="mender != null">mender=#{mender},</if>
            <if test="mendTime != null">mendTime=#{mendTime}</if>
        </set>
        where id=#{id}
    </update>
</mapper>
