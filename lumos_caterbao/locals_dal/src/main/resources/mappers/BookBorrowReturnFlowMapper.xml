<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caterbao.lumos.locals.dal.mapper.BookBorrowReturnFlowMapper">

    <select id="findOne" resultType="com.caterbao.lumos.locals.dal.pojo.BookBorrowReturnFlow" parameterType="com.caterbao.lumos.locals.dal.LumosSelective">
        select  ${fields} from Shop where 1=1
        <if test="where.MerchId != null">and MerchId =#{where.MerchId}</if>
        <if test="where.ShopId != null">and Id =#{where.ShopId}</if>
    </select>
    <select id="find" resultType="com.caterbao.lumos.locals.dal.pojo.BookBorrowReturnFlow" parameterType="com.caterbao.lumos.locals.dal.LumosSelective">
        select ${fields} from Shop where 1=1
        <if test="where.Name != null and where.Name.length() > 0">and name like concat('%', #{where.Name}, '%')</if>
        <if test="where.MerchId != null and where.MerchId.length() > 0">and merchId =#{where.MerchId}</if>
    </select>

    <insert id="insert" parameterType="com.caterbao.lumos.locals.dal.pojo.BookBorrowReturnFlow">
  insert into BookBorrowReturnFlow(id,merchId,storeId,shopId,deviceId,cabinetId,slotId, clientUserId,identityType,identityId,status,creator,createTime)
  values(#{id},#{merchId},#{storeId},#{shopId},#{deviceId},#{cabinetId},#{slotId},#{clientUserId},#{identityType},#{identityId},#{status},#{creator},#{createTime})
    </insert>
    <update id="update" parameterType="com.caterbao.lumos.locals.dal.pojo.BookBorrowReturnFlow">
        update BookBorrowReturnFlow
        <set>
            <if test="openActionResult != null">openActionResult=#{openActionResult},</if>
            <if test="openActionCode != null">openActionCode=#{openActionCode},</if>
            <if test="openActionTime != null">openActionTime=#{openActionTime},</if>
            <if test="openRfIds != null">openRfIds=#{openRfIds},</if>
            <if test="closeActionResult != null">closeActionResult=#{closeActionResult},</if>
            <if test="closeActionCode != null">closeActionCode=#{closeActionCode},</if>
            <if test="closeActionTime != null">closeActionTime=#{closeActionTime},</if>
            <if test="closeRfIds != null">closeRfIds=#{closeRfIds},</if>
            <if test="status != null">status=#{status},</if>
            <if test="mender != null">mender=#{mender},</if>
            <if test="mendTime != null">mendTime=#{mendTime}</if>
        </set>
        where id=#{id}
    </update>
</mapper>
