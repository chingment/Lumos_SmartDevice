<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.caterbao.lumos.locals.dal.mapper.UserMapper">

    <resultMap id="user" type="com.caterbao.lumos.locals.dal.pojo.SysUser">
        <result property="id" column="id"/>
        <result property="userName" column="userName"/>
        <result property="passwordHash" column="passwordHash"/>
    </resultMap>

    <select id="findByUserNameAndPassword" resultMap="user">
        select * from SysUser
        <where>
            <if test="userName != null and userName.length() > 0">SysUser.userName=#{userName}</if>
            <if test="passwordHash != null and passwordHash.length() > 0">and SysUser.passwordHash=#{passwordHash}</if>
        </where>
    </select>
</mapper>
